server:
  http_listen_port: 0
  grpc_listen_port: 0

positions:
  filename: /tmp/promtail-positions.yaml

clients:
  - url: https://{{ promtail_grafana_cloud_username }}:{{ grafana_cloud_password }}@logs-prod3.grafana.net/loki/api/v1/push

scrape_configs:
- job_name: ceramic
  static_configs:
  - targets:
      - localhost
    labels:
      job: varlogs
      __path__: /home/ceramic/.ceramic/logs/*.log